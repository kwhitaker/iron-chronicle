{
  "name": "iron-chronicle",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.3.2",
    "@testing-library/user-event": "^7.1.2",
    "clsx": "^1.1.0",
    "date-fns": "^2.13.0",
    "lodash": "^4.17.19",
    "mdi-react": "^7.1.0",
    "mobx": "^5.15.4",
    "mobx-react-lite": "^2.0.6",
    "mobx-state-tree": "^3.16.0",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-hook-form": "^5.7.2",
    "react-markdown": "^4.3.1",
    "react-modal": "^3.11.2",
    "react-modal-hook": "^3.0.0",
    "react-scripts": "3.4.1",
    "react-tabs": "^3.1.0",
    "react-tooltip": "^4.2.6",
    "shortid": "^2.2.15",
    "tailwindcss": "^1.4.6",
    "typeface-anton": "^0.0.72"
  },
  "scripts": {
    "start": "cross-env yarn run watch:css && react-scripts start",
    "build": "cross-env yarn run build:css && react-scripts build",
    "test": "cross-env watch 'clear && yarn -s rite' src",
    "rite": "cross-env riteway -r @babel/register -r @babel/polyfill 'src/**/*.test.js' | tap-color",
    "eject": "react-scripts eject",
    "build:css": "cross-env postcss src/assets/tailwind.css -o src/assets/main.css",
    "watch:css": "cross-env postcss src/assets/tailwind.css -o src/assets/main.css",
    "lint": "cross-env eslint --fix --ext .js,.jsx ./src"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint",
      "pre-push": "yarn rite"
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.9.6",
    "@babel/polyfill": "^7.8.7",
    "@babel/preset-env": "^7.9.6",
    "@babel/preset-react": "^7.9.4",
    "@babel/register": "^7.9.0",
    "autoprefixer": "^9.7.6",
    "babel-eslint": "^10.1.0",
    "cross-env": "^7.0.2",
    "eslint-config-airbnb": "^18.1.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-react": "^7.19.0",
    "husky": "^4.2.5",
    "postcss-cli": "^7.1.1",
    "prettier": "^2.0.5",
    "riteway": "^6.1.2",
    "tap-color": "^1.2.0"
  }
}
